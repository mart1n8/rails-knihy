<%= form_with(model: author, url: url, local: true) do |form| %>
  <%= render 'shared/error_messages', model: author%>
  <div class="row">
    <div class="col-3 text-center">
      <%= image_tag (author.photo.url.presence || "https://via.placeholder.com/150x200"), class: "img-fluid" %>
    </div>
    <div class="col-9">
      <div class="row">
        <div class="form-group col-6">
          <%= form.label :first_name, t('author.first_name').capitalize %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group col-6">
          <%= form.label :last_name, t('author.last_name').capitalize %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-6">
        <%= form.label :nation_id, t('nation.nation').capitalize %>
        <%= form.select :nation_id, Nation.all.collect { |p| [ p.title, p.id ] }, {include_blank: "--- #{t('nation.nation')} ---", :selected => author.nation_id}, {:class=>"form-control", :style=>"width: 50%"} %>
        </div>
        <div class="form-group col-6">
          <%= form.label :photo, t('author.photo').capitalize %>
          <%= form.file_field :photo, class: "form-control-file" %>
        </div>
      </div>
      <div class="row">
          <div class="col-6">
              <div class="form-group">
                <%= form.label :birth_day, t('author.birth_day').capitalize %>
                <%= form.text_field :birth_day, class: "form-control", type: "date", min: 0000-00-00, max: Time.now.strftime("%Y-%m-%d") %>
              </div>
              <div class="form-group">
                <%= form.label :birth_place, t('author.birth_place').capitalize %>
                <%= form.text_field :birth_place, class: "form-control" %>
              </div>
          </div>
          <div class="col-6">
              <div class="form-group">
                <%= form.label :death_day, t('author.death_day').capitalize %>
                <%= form.text_field :death_day, class: "form-control", type: "date", min: 0000-00-00, max: Time.now.strftime("%Y-%m-%d") %>
              </div>
              <div class="form-group">
                <%= form.label :death_place, t('author.death_place').capitalize %>
                <%= form.text_field :death_place, class: "form-control" %>
              </div>
          </div>
        </div>
      <div class="row actions mt-3">
        <div class="col-12 text-center ">
            <%= form.submit t('save').capitalize , class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
