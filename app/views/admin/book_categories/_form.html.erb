<%= form_with(model: book_category, local: true, url: url) do |form| %>
  <%= render 'shared/error_messages', model: book_category%>
    <div class="row">
        <div class="form-group col-5">
          <%= form.label :title, t('book_category.title').capitalize %>
          <%= form.text_field :title, autofocus: true, class: "form-control", placeholder: t('book_category.title') %>
        </div>
        <div class="form-group col-5">
           <%= form.submit t('save').titleize, class: "btn btn-primary" %>
      </div>
    </div>
<% end %>

